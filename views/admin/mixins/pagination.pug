mixin pagination(pagination)
    nav
        ul.pagination

            if (pagination.currentPage > 1)
                li.page-item
                    button(class="page-link" button-paginaton=pagination.currentPage - 1) Trang trước


            - for (var i = 1; i <= pagination.totalPages; i++)
                li(class=`page-item ${pagination.currentPage == i ? "active" : ""}` button-paginaton=i)
                    button.page-link #{i}


            if (pagination.currentPage < pagination.totalPages)
                li.page-item
                    button(class="page-link" button-paginaton=pagination.currentPage + 1) Kế tiếp